<section class="depot-form">
  <% if flash[:notice] %>
    <aside class="notice">
      <%= flash[:notice] %>
    </aside>
  <% end %>

  <%= form_tag do %>
    <h2>Please Log In</h2>
    <div class="field">
      <%= label_tag :name, 'Name' %>
      <%= text_field_tag :name, params[:name] %>
    </div>
    <div class="field">
      <%= label_tag :password, 'Password' %>
      <%= password_field_tag :password %>
    </div>
    <div class="actions">
      <%= submit_tag 'Login' %>
    </div>
  <% end %>
</section>
