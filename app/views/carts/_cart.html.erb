<article>
  <% if notice %>
    <aside id="notice"><%= notice %></aside>
  <% end %>
  <h2>Your Cart</h2>

  <table>
    <tbody>
      <%= render(cart.line_items) %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="2">
          Total:
        </th>
        <td class="price">
          <%= number_to_currency(cart.total_price) %>
        </td>
      </tr>
    </tfoot>
  </table>

  <%= button_to 'Empty Cart', cart, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %>
  <%= button_to 'Checkout', new_order_path, method: :get, class: 'checkout' %>
</article>
